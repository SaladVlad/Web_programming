@using Zadatak3.Models
@model IEnumerable<UploadedFile>

@{
    ViewBag.Title = "Home Page";
}

<form method="post" action="/Home/UploadFile" enctype="multipart/form-data">
    <input type="file" name="file" />
    <input type="submit" name="Upload" />

    @ViewBag.Message
</form>

<table>
    <tr> <th>Uploaded files</th> </tr>
    @foreach (var file in Model)
    {
    <tr>
        <td>@file.Filename</td>
        <td><img src="~/Files/@file.Filename" style="width:100px; height:100px" /></td>
    </tr>
    }

</table>