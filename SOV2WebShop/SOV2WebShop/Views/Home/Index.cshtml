@using SOV2WebShop.Models
@model List<Product>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Product list</title>
</head>
<body>
    <div> 
        <h2>Products list:</h2>

        <table border="1">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>#</th>
            </tr>
            @foreach(Product product in @Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>
                        <label>1</label>
                    </td>
                    <td>
                        <form method="post" action="~/Cart/Add">
                            <input type="hidden" name="productId" value="@product.Id" />
                            <input type="submit" value="Add" />
                        </form>
                    </td>
                </tr>
            }
        </table>
        @Html.ActionLink("View cart","Index","Cart")

        @Html.ActionLink("Logout","Logout","Authenticate");
    </div>
</body>
</html>
